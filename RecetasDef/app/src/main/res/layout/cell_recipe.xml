<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_foto_prueba"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:alpha="0.4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:layout_marginRight="70dp"
                android:id="@+id/txtCard"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:text="Ternera con patatas, salsa de vinagre y pimiento"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@id/imgFaltanIngedient"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_salero"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/imgFaltanIngedient"
                android:layout_marginBottom="6dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>